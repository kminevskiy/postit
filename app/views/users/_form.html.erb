<%= render "shared/errors", errors: @user.errors %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: "Eastern Time (US & Canada)" %>
    <%= f.label :phone, "Phone number" %>
    <%= f.text_field :phone, maxlength: 10 %>
  </div>
  <br/>
  <%= f.submit @user.new_record? ? "Create user" : "Update user", class: "btn btn-primary" %>
<% end %>
